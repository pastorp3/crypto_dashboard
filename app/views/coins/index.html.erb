
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<div class="container mt-4">
  <h1>Coin Market</h1>

  <%= render partial: 'trade_form' %>

  <div id="result-container" class="mt-4"></div>

  <div class="mt-4">
    <%= render partial: 'tab_buttons' %>
  </div>
  <div id="coins-tab">
    <%= render partial: 'coins_tab', locals: { coins_value: @coins_value } %>
  </div>
  <div id="wallet-tab">
    <%= render partial: 'wallet_tab', locals: { coins_value: @coins_value } %>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<%= javascript_pack_tag 'dashboard' %>